---
import Registerform from "@components/register-form.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import Link from "../components/ui/link.astro";
import RegisterForm from "@components/register-form.astro";
---

<Layout title="Registro">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Registro</Fragment>
      <Fragment slot="desc">Aquí te puedes registrar. Rellena el formulario.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">¿Tienes problemas para registrarte?</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Si necesitas ayuda para el registro puedes contactar con nosotros.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Link
            href="/contact"
            class="flex gap-1 items-center justify-center"
            target="_blank">
             Contactar
          </Link>
          </div>
        </div>
      </div>
      <div>
        <Registerform />
      </div>
    </div>
  </Container>
</Layout>
