---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";


const menuitems = [
  {
    title: "Mis datos",
    path: "",
  },
  {
    title: "Subir/Eliminar",
    path: "",
  },
  {
    title: "Ayuda",
    path: "",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center bg-grey-100 p-4 shadow-md z-50">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg" style="display: flex; align-items: center;">
          <img src="/Adogta.png" alt="Logo AdogtaMascota" class="w-14 h-14 mr-3">
          <span class="font-bold text-slate-800">Adogta</span>
          <span class="text-slate-500">Mascota</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <ul class="flex flex-col lg:flex-row lg:gap-3">
            {menuitems.map(item => (
              <li>
                <a href={item.path} class={"flex lg:px-3 py-2 items-center text-gray-600 hover:text-black " + (item.title === "Colaborar" ? "bg-green-500 text-white rounded-md px-2 py-2" : "")}>
                  <span>{item.title}</span>
                </a>
              </li>
            ))}
          </ul>
        
        </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link href="/" size="md">Cerrar Sesi√≥n</Link>
      </div>
    </div>
  </div>
</header>
</Container>
