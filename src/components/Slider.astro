        <img src="/protectora-adogta.jpg" alt="Protectoras" class="opacity-50" />
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center text-black z-10">
          <h1 class="text-4xl font-bold">Listado de Protectoras</h1>
          <a href="#" class="inline-block mt-4 bg-blue-500 text-white px-10 py-2 rounded-md hover:bg-blue-600">Ver más</a>
        </div>     
      </div>
      <div class="swiper-slide relative">
        <img src="/protectoras.jpg" alt="Campañas" class="opacity-50" />
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center text-black z-10">
          <h1 class="text-4xl font-bold">Campañas</h1>
          <a href="#" class="inline-block mt-4 bg-blue-500 text-white px-10 py-2 rounded-md hover:bg-blue-600">Ver más</a>
        </div>     
      </div>
      <div class="swiper-slide relative">
        <img src="/colabora.jpg" alt="Colabora" class="opacity-50" />
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center text-black z-10">
          <h1 class="text-4xl font-bold">Colabora</h1>
          <a href="#" class="inline-block mt-4 bg-blue-500 text-white px-10 py-2 rounded-md hover:bg-blue-600">Ver más</a>
        </div>     
      </div>
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</div>

<script>
  import Swiper from 'swiper/bundle';
  import 'swiper/css/bundle';

  document.addEventListener('DOMContentLoaded', () => {
    const swiper = new Swiper('.swiper-container', {
      slidesPerView: 'auto',
      centeredSlides: true,
      spaceBetween: 40,
      navigation: {
        prevEl: '.swiper-button-prev',
        nextEl: '.swiper-button-next',
      },
      autoplay: {
        delay: 4000, // 5 segundos entre cada transición
        disableOnInteraction: false, // Permite la interacción del usuario para detener el autoplay
      },
    });
  });
</script>

<style>
  .slider {
    margin-top: 2rem;
    margin-bottom: 4rem;
    position: relative;
  }
  .swiper-container {
    width: 100%;
    max-width: 80%;
    height: 460px;
    margin: 0 auto;
    border: 1px solid #ccc;
    border-radius: 10px;
    overflow: hidden;
  }

  .swiper-slide {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .swiper-slide img {
    max-width: 100%;
    height: auto;
  }

  .swiper-slide b {
    position: absolute;
    bottom: 20px;
    left: 20px;
    color: white;
    font-weight: bold;
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .swiper-button-prev {
    /* left: 10px; */
    margin-left: 10px;
  }

  .swiper-button-next {
    /* color: var(--gray-100); */
    /* right: 10px; */
    margin-right: 10px;
  }

  .swiper-button-prev,
  .swiper-button-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10; /* Asegura que los botones estén encima de los slides */
  }
</style>
